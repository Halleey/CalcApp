<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:visibility="visible">

    <TextView
            android:text="Bem vindo ao meu programa"
            android:layout_width="243dp"
            android:layout_height="35dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="329dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:paddingTop="5dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFFFFF"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumero1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            android:hint="Número 1" tools:layout_editor_absoluteX="0dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editTextNumero2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp"
            android:hint="Número 2" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="Somar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botaoCalcular"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="168dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="320dp"
            android:backgroundTint="#5A02A8"
            android:textColor="#000000"/>
    <Button
            android:text="Dividir"
            android:layout_width="102dp"
            android:layout_height="44dp" android:id="@+id/button"
            tools:layout_editor_absoluteX="4dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="216dp"/>
    <Button
            android:text="subtração"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp"/>
    <Button
            android:text="multiplicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            tools:layout_editor_absoluteX="-14dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="324dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
